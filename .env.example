# QNA-Auth Environment Configuration
# Copy this file to .env and adjust values for your environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=false
WORKERS=1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (default - good for development)
DATABASE_URL=sqlite:///./data/qna_auth.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/qna_auth

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# API Key Protection (set to true and provide key for production)
API_KEY_ENABLED=false
API_KEY=your-secure-api-key-here

# Embedding Encryption (recommended for production)
ENCRYPT_EMBEDDINGS=false
# Generate a 32-byte key: python -c "import secrets; print(secrets.token_hex(32))"
ENCRYPTION_KEY=

# =============================================================================
# AUTHENTICATION SETTINGS
# =============================================================================
AUTH_THRESHOLD=0.85
MAX_AUTH_ATTEMPTS=5
CHALLENGE_EXPIRY=60

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=30
AUTH_RATE_LIMIT=5

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# EXTERNAL APIS
# =============================================================================
# ANU QRNG API (free tier)
QRNG_API_URL=https://qrng.anu.edu.au/API/jsonI.php

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
